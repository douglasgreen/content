{
    "name": "douglasgreen/content",
    "description": "XML content abstraction layer",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/douglasgreen/content",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "centralized storage",
        "command queue",
        "content API",
        "content integration",
        "content management",
        "content proofing",
        "content relationships",
        "content staging",
        "content synchronization",
        "content transformation",
        "cross-course management",
        "data abstraction",
        "data integrity",
        "data versioning",
        "MySQL",
        "PHP",
        "REST API",
        "schema versioning",
        "structured content management",
        "UUID",
        "XML",
        "XML blob",
        "XML schema",
        "XML validation"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\Content\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "douglasgreen/optparser": "dev-main",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^1.0",
        "symplify/easy-coding-standard": "^12.2"
    },
    "scripts": {
        "lint": [
            "ecs",
            "rector --dry-run",
            "./run_phpmd.sh",
            "./run_phpstan.sh"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": [
            "vendor/douglasgreen/config-setup/bin/copy_files.php --wrap 100"
        ],
        "post-update-cmd": [
            "vendor/douglasgreen/config-setup/bin/copy_files.php --wrap 100"
        ]
    }
}
