{
    "name": "douglasgreen/content",
    "description": "XML content abstraction layer",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/douglasgreen/content",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "centralized storage",
        "command queue",
        "content API",
        "content integration",
        "content management",
        "content proofing",
        "content relationships",
        "content staging",
        "content synchronization",
        "content transformation",
        "cross-course management",
        "data abstraction",
        "data integrity",
        "data versioning",
        "MySQL",
        "PHP",
        "REST API",
        "schema versioning",
        "structured content management",
        "UUID",
        "XML",
        "XML blob",
        "XML schema",
        "XML validation"
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "DouglasGreen\\Content\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "douglasgreen/utility": "dev-main"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "rector/rector": "^1.1",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "ecs",
            "php-linter",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config-setup --pre-commit",
        "post-update-cmd": "config-setup --pre-commit"
    }
}
